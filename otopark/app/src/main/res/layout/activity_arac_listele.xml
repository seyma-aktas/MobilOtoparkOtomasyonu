<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    android:paddingTop="@dimen/cardview_compat_inset_shadow"
    android:paddingBottom="@dimen/cardview_compat_inset_shadow"
    android:background="#8C9EFF"
    tools:context=".Activity.KullaniciGiris"
    tools:layout_editor_absoluteY="81dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="340dp"
                android:layout_height="127dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-5dp"
                android:layout_marginBottom="2dp"
                android:padding="1dp"
                android:src="@drawable/card" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f9d7db" />


            <Button
                android:id="@+id/listele"
                style="@style/Base.TextAppearance.AppCompat.Body2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
                android:clickable="true"
                android:padding="16dp"
                android:text="LÄ°STELE"
                android:textAllCaps="false"
                android:textColor="#f16f7d"
                android:textStyle="bold" />

            <GridView
                android:id="@+id/gridView"
                android:layout_width="match_parent"
                android:layout_height="5000dp"
                android:layout_below="@+id/listele"
                android:layout_alignParentStart="true"
                android:layout_marginTop="16dp"
                android:numColumns="2"
                app:layout_constraintTop_toTopOf="@+id/listele"
                tools:layout_editor_absoluteX="0dp"></GridView>



        </LinearLayout>


    </ScrollView>



</LinearLayout>